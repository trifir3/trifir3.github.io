---
import BaseLayout from "./BaseLayout.astro"
import Footer from "@/components/Footer/Footer.astro"
const { frontmatter } = Astro.props
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="flex flex-col items-start text-stone-800 dark:text-stone-200">
    <div class="py-2">
      <div class="mb-6 text-pretty text-3xl font-black">
        {frontmatter.title}
      </div>
      <div class="mb-4 flex gap-2 font-thin text-stone-600 dark:text-stone-400">
        {(frontmatter.pubDate ?? "").split("T")[0]}

        {
          frontmatter.tags.map((tag: string) => (
            <span class="rounded-xl bg-white/65 px-2 text-black invert transition-colors duration-300 ease-in-out dark:bg-black/60 dark:text-white">
              #{tag}
            </span>
          ))
        }
      </div>

      <div class="text-lg italic text-stone-600 dark:text-stone-400">
        {frontmatter.description}
      </div>
    </div>
    <article
      class="prose prose-stone max-w-[80ch] text-pretty text-base md:prose-lg dark:prose-invert prose-img:mx-auto"
    >
      <slot />
    </article>
  </div>
  <Footer />
</BaseLayout>
