---
import BaseLayout from "@/layouts/BaseLayout.astro"
import { Content as Selfie } from "#/selfie.md"

const pageTitle = "About"
---

<BaseLayout pageTitle={pageTitle}>
  <div class="flex flex-col gap-4">
    <div>
      <article
        class="prose prose-stone md:prose-lg dark:prose-invert prose-h1:text-3xl prose-h2:text-2xl prose-h3:text-xl"
      >
        <Selfie />
      </article>
    </div>
  </div>
</BaseLayout>

<script is:inline>
  MathJax = {
    tex: {
      inlineMath: [
        ["$", "$"],
        ["\\(", "\\)"],
      ],
    },
    svg: {
      fontCache: "global",
    },
  }
</script>
<script
  is:inline
  id="MathJax-script"
  async
  src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
