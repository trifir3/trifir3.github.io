---
import { urlFromBase } from "@/lib/utils"

interface Nvi {
  name: string
  url: string
}

const base = import.meta.env.BASE_URL
const nvis: Nvi[] = [
  { name: "about", url: urlFromBase(base, "about") },
  { name: "blog", url: urlFromBase(base, "/") },
  { name: "rss", url: urlFromBase(base, "rss.xml") },
]
---

<div
  class="saturate-400 fixed left-0 right-0 top-0 z-50 bg-stone-100/75 py-5 backdrop-blur-sm dark:bg-stone-900/25"
>
  <div class="mx-auto flex max-w-screen-md flex-wrap justify-between pl-6 pr-8">
    <div class="flex flex-wrap items-center gap-1">
      <button
        id="light-theme-button"
        aria-label="Light theme"
        class="group flex size-10 items-center justify-center rounded-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="transition-colors duration-300 ease-in-out group-hover:stroke-black group-hover:dark:stroke-white"
        >
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
      </button>
      <button
        id="dark-theme-button"
        aria-label="Dark theme"
        class="group flex size-10 items-center justify-center rounded-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="transition-colors duration-300 ease-in-out group-hover:stroke-black group-hover:dark:stroke-white"
        >
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
        </svg>
      </button>
      <button
        id="system-theme-button"
        aria-label="System theme"
        class="group flex size-10 items-center justify-center rounded-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="transition-colors duration-300 ease-in-out group-hover:stroke-black group-hover:dark:stroke-white"
        >
          <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
          <line x1="8" y1="21" x2="16" y2="21"></line>
          <line x1="12" y1="17" x2="12" y2="21"></line>
        </svg>
      </button>
    </div>
    <div class="flex items-center gap-4">
      {
        nvis.map((nvi) => (
          <a
            class="underline underline-offset-4 transition-colors duration-300 ease-in-out hover:text-black dark:hover:text-white"
            href={nvi.url}
          >
            {nvi.name}
          </a>
        ))
      }
    </div>
  </div>
</div>
